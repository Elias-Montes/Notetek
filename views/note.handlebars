<h3>My Notes</h3>

{{#each userNotes as |note| }}
<p>{{note.title}}</p>
{{/each}}

<a class="waves-effect waves-light btn modal-trigger" href="#note-modal">New Note</a>
<!-- Modal for creating/editing notes -->
<div id="note-modal" class="modal">
    <div class="modal-content">
        <form id="save-note">
        {{!-- <span class="close-btn">&times;</span> --}}
        <h4>Create <br> <span style="font-size: smaller; color: green;">update</span></h4>
        <input type="text" id="note-title" placeholder="Note Title">
        {{!-- <textarea id="note-content" placeholder="Note Content"></textarea> --}}
        
        <input id="note-content" type="hidden" name="content">
        <trix-editor input="note-content"></trix-editor>

        <button class="btn waves-effect waves-light" id="save-note-btn" type="submit" name="action">Save</button>
        </form>
    </div>
</div>

